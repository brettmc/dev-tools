{
    "name": "open-telemetry/dev-tools",
    "type": "package",
    "description": "Development tools for OpenTelemetry PHP.",
    "authors": [
        {
            "name": "Timo Michna",
            "email": "timomichna@yahoo.de"
        }
    ],
    "license": "Apache-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.1",
        "composer/composer": "^2.3",
        "gitonomy/gitlib": "^1.3",
        "knplabs/github-api": "^3.4",
        "kriswallsmith/buzz": "^1.2",
        "nyholm/psr7": "^1.4",
        "symfony/runtime": "^5.0|^6.0",
        "symfony/service-contracts": "^1",
        "symfony/yaml": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "open-telemetry/dev-common-metapackage": "dev-main"
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/runtime": true
        }
    }
}
